{
  "name": "balnostixui-modern",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "prebuild": "expo prebuild",
    "start:dev": "cross-env EXPO_PUBLIC_APP_VARIANT=development expo start",
    "start:uat": "cross-env EXPO_PUBLIC_APP_VARIANT=uat expo start",
    "start:prod": "cross-env EXPO_PUBLIC_APP_VARIANT=production expo start",
    "android:dev": "cross-env EXPO_PUBLIC_APP_VARIANT=development expo run:android --variant devDebug",
    "android:dev:release": "cross-env EXPO_PUBLIC_APP_VARIANT=development expo run:android --variant devRelease",
    "android:uat": "cross-env EXPO_PUBLIC_APP_VARIANT=uat expo run:android --variant uatDebug",
    "android:uat:release": "cross-env EXPO_PUBLIC_APP_VARIANT=uat expo run:android --variant uatRelease",
    "android:prod": "cross-env EXPO_PUBLIC_APP_VARIANT=production expo run:android --variant prodDebug",
    "android:prod:release": "cross-env EXPO_PUBLIC_APP_VARIANT=production expo run:android --variant prodRelease",
    "build:apk:dev": "cd android && gradlew.bat assembleDevDebug && cd ..",
    "build:apk:dev:release": "cd android && gradlew.bat assembleDevRelease && cd ..",
    "build:apk:uat": "cd android && gradlew.bat assembleUatDebug && cd ..",
    "build:apk:uat:release": "cd android && gradlew.bat assembleUatRelease && cd ..",
    "build:apk:prod": "cd android && gradlew.bat assembleProdDebug && cd ..",
    "build:apk:prod:release": "cd android && gradlew.bat assembleProdRelease && cd ..",
    "build:bundle:dev": "cd android && gradlew.bat bundleDevRelease && cd ..",
    "build:bundle:uat": "cd android && gradlew.bat bundleUatRelease && cd ..",
    "build:bundle:prod": "cd android && gradlew.bat bundleProdRelease && cd ..",
    "eas:dev": "eas build --profile development --platform android",
    "eas:uat": "eas build --profile uat --platform android",
    "eas:prod": "eas build --profile production --platform android",
    "ios": "expo run:ios",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" && prettier -c \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "web": "expo start --web",
    "android": "expo run:android"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@hookform/resolvers": "^5.2.2",
    "@react-native-community/netinfo": "11.4.1",
    "@react-navigation/native": "^7.1.6",
    "@sentry/react-native": "^7.6.0",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "expo": "^54.0.0",
    "expo-camera": "~17.0.9",
    "expo-constants": "~18.0.9",
    "expo-image": "~3.0.10",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "~8.0.8",
    "expo-location": "~19.0.7",
    "expo-media-library": "~18.2.0",
    "expo-router": "~6.0.10",
    "expo-splash-screen": "~31.0.11",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.7",
    "expo-web-browser": "~15.0.7",
    "lodash": "^4.17.21",
    "nativewind": "latest",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.66.1",
    "react-native": "0.81.5",
    "react-native-ble-manager": "^12.4.1",
    "react-native-ble-plx": "^3.5.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-mmkv": "^4.0.1",
    "react-native-progress": "^5.0.1",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-toast-message": "^2.3.3",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "0.5.1",
    "react-native-zip-archive": "^7.0.2",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.12",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@biomejs/biome": "^2.3.6",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "~19.1.10",
    "commitizen": "^4.3.1",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "lefthook": "^2.0.4",
    "lint-staged": "^16.2.7",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.2",
    "ultracite": "^6.3.4"
  },
  "private": true,
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
