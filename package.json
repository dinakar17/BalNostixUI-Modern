    "lefthook": "^2.0.4",
    "lint-staged": "^16.2.7",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.9.2",
    "ultracite": "^6.3.4"
  },
  "private": true,
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
